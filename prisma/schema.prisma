generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model candidate_interviews {
  
  user_id           String   @id @default(uuid()) @db.Uuid
  candidate_name    String?  @db.VarChar(100)
  mobile_number     String? @unique   @db.VarChar(15)
  candidate_email   String?  @db.VarChar(150)
  candidate_resume_link String? @db.Text

  frontend_interview_date   DateTime? @db.Date
  frontend_time_slot        String?   @db.VarChar(50)
  backend_interview_date    DateTime? @db.Date
  backend_time_slot         String?   @db.VarChar(50)
  meeting_link              String?   @db.Text
  interview_date            DateTime? @db.Date
  interview_time            DateTime? @db.Time
  interview_duration        String?   @db.VarChar(20)
  interview_status          String?   @db.VarChar(50)

  self_introduction         String?   @db.Text
  project_explanation       String?   @db.Text
  communication             String?   @db.Text
  final_non_tech_score      Decimal?  @db.Decimal(3, 1)

  @@map("candidate_interviews")
}